;ws-icon-1 = 2;
;ws-icon-2 = 3;
;ws-icon-9 = 10;
;ws-icon-default = 

[module/wlan]
type = internal/network
interface = wlp0s20u1
interval = 3.0

format-connected = %{A1:urxvt -e nmtui & disown:}   <label-connected>%{A}
format-connected-underline = ${colors.foreground}
format-connected-margin = 3
label-connected = %essid%

format-disconnected = %{A1:urxvt -e nmtui & disown:}<label-disconnected>%{A}
format-disconnected-margin = 3
format-disconnected-underline = ${colors.grey}
label-disconnected = %ifname% disconnected

ramp-signal-0 = 
ramp-signal-1 = 
ramp-signal-2 = 
ramp-signal-3 = 
ramp-signal-4 = 
ramp-signal-color1 = ${colors.color1}

[module/date]
type = internal/date
interval = 10
format-margin = 2
format-underline = ${colors.grey}

time = "%H:%M"
date = "%d %b"

label = %{A1:urxvt -e calcurse & disown:}%time% | %date%%{A}
label-background = ${colors.background}
label-padding = 0


[module/pulseaudio]
type = internal/pulseaudio

format-volume-padding = 2
format-volume-margin = 2
format-volume-underline = ${colors.foreground}
format-volume = <ramp-volume><label-volume>
